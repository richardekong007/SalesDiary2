<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">
 <RelativeLayout
     android:orientation="vertical" android:layout_width="match_parent"
     android:layout_height="match_parent">

  <TextView android:id="@+id/text1"
      android:text="What products do you wish to store?"
      android:textColor="#fff"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textSize="25dp"
      android:textStyle="bold"
      android:layout_marginTop="30dp"
      />
  <TextView
      android:id="@+id/descriptionLab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="50dp"
      android:layout_below="@+id/text1"
      android:text="Description:"
      android:textColor="#fff"
      android:textSize="25dp"/>
  <EditText
      android:id="@+id/productdesc"
      android:layout_width="250dp"
      android:layout_height="40dp"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="50dp"
      android:layout_below="@id/descriptionLab"
      android:background="#fff"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/costpricelab"
      android:layout_below="@+id/productdesc"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="30dp"
      android:text="Cost Price:"
      android:textSize="25dp"
      android:textColor="#fff"/>
  <EditText
      android:layout_width="250dp"
      android:layout_height="40dp"
      android:background="#fff"
      android:layout_below="@id/costpricelab"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="50dp"
      android:id="@+id/costprice"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/imgpathlab"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="50dp"
      android:layout_below="@id/costprice"
      android:textColor="#fff"
      android:textSize="25dp"
      android:text="Image Path:"/>
  <EditText
      android:id="@+id/imgpath"
      android:layout_width="125dp"
      android:layout_height="40dp"
      android:layout_below="@id/imgpathlab"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="50dp"
      android:background="#fff"
      />
  <ImageButton
      android:id="@+id/capturebtn"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_below="@+id/imgpathlab"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="15dp"
      android:layout_toRightOf="@+id/imgpath"
      android:src="@mipmap/camera2"
      />


  <TextView android:id="@+id/stock"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="50dp"
      android:layout_below="@+id/imgpath"
      android:textColor="#fff"
      android:textSize="25dp"
      android:text="Stock:"
      />
  <EditText
      android:id="@+id/stockValue"
      android:layout_width="250dp"
      android:layout_height="40dp"
      android:layout_below="@id/stock"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="50dp"
      android:background="#fff"/>
  <Button
      android:id="@+id/store"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:text="Store"
      android:layout_below="@id/stockValue"
      android:layout_marginTop="50dp"
      android:layout_marginLeft="50dp"
      android:textColor="#005"
      android:textSize="25dp"
      android:padding="20dp"/>
  <Button
      android:id="@+id/cat"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:text="Catalog"
      android:layout_below="@id/stockValue"
      android:layout_marginTop="50dp"
      android:layout_marginLeft="70dp"
      android:layout_toRightOf="@+id/stock"
      android:textColor="#005"
      android:textSize="25dp"
      android:padding="20dp"/>
 </RelativeLayout>
</ScrollView>