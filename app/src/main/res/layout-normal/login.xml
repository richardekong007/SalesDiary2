<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">
    <TextView android:text="What are your details?" android:layout_gravity="center" android:layout_width="260dp"
        android:layout_height="60dp" android:textStyle="bold" android:textSize="25dp" android:textColor="#fff"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="11"
        android:columnCount="3"
        android:layout_gravity="center">
        <ImageView android:layout_column="1"
            android:layout_row="1"
            android:src="@mipmap/avatar"/>
        <Space android:layout_row="2" android:layout_height="25dp" android:layout_column="1"/>
        <TextView android:text="User Name:"
            android:layout_height="30dp"
            android:textSize="25dp"

            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:textColor="#fff"/>
        <EditText android:id="@+id/username2"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:hint="user name"/>
        <Space android:layout_row="4" android:layout_height="25dp" android:layout_column="1"/>


        <TextView android:text="Password:"
            android:layout_height="30dp"
            android:textSize="25dp"

            android:layout_width="wrap_content"
            android:layout_row="7"
            android:layout_column="1"
            android:textColor="#fff"/>
        <EditText android:id="@+id/password2"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:background="#fff"
            android:hint="password"/>
        <Space android:layout_row="8" android:layout_height="25dp" android:layout_column="1"/>
        <Button android:id="@+id/Login2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:layout_column="1"
            android:textSize="25dp"
            android:layout_row="9"
            android:textColor="#005"
            android:textStyle="bold"/>
        <Button android:id="@+id/signup2"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_column="2"
            android:layout_row="9"
            android:textColor="#005"
            android:textStyle="bold"/>

    </GridLayout>
</LinearLayout>